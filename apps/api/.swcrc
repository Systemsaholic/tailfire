{
  "$schema": "https://json.schemastore.org/swcrc",
  "sourceMaps": true,
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "tsx": true,
      "decorators": true,
      "dynamicImport": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true,
      "react": {
        "runtime": "classic"
      }
    },
    "target": "es2021",
    "keepClassNames": true,
    "baseUrl": "./"
  },
  "module": {
    "type": "commonjs"
  }
}

{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "steps": {
    "install": {
      "commands": [
        {
          "type": "exec",
          "command": "corepack enable && pnpm install --frozen-lockfile"
        }
      ]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": [
        {
          "type": "exec",
          "command": "pnpm --filter @tailfire/shared-types build && pnpm --filter @tailfire/database build && pnpm --filter @tailfire/api build"
        }
      ]
    }
  },
  "deploy": {
    "inputs": [{ "step": "build" }],
    "startCommand": "pnpm --filter @tailfire/api start"
  }
}
